<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/title"
            style="@style/BubblesFontLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="testtest" />

        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:id="@+id/dotscontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:id="@+id/dot1"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="1dip"
                android:layout_marginRight="@dimen/tiny"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:id="@+id/dot2"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="1dip"
                android:layout_marginRight="@dimen/tiny"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot3"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot4"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot5"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot6"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot7"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot8"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot9"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/small"
                android:layout_height="@dimen/small"
                android:src="@drawable/whiterectangle"
                app:riv_border_color="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/tiny"
                app:riv_border_width="1dip"
                android:id="@+id/dot10"
                app:riv_oval="true" />

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>
