<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JupiterOne">
        <item name="android:fontFamily">@font/gothamlight</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="JupiterSmallBold">
        <item name="android:fontFamily">@font/gothambold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BubblesFontLarge">
        <item name="android:fontFamily">@font/bubblefontregular</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BubblesFontXlarge" parent="@style/BubblesFontLarge">
        <item name="android:textSize">@dimen/xlarge</item>
    </style>

    <style name="BubblesFontHeader" parent="@style/BubblesFontLarge">
        <item name="android:textSize">@dimen/xxxlarge</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BubblesFontSmall" parent="@style/BubblesFontLarge">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="quizbtnstyle">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:background">@drawable/quizbtn</item>
        <item name="android:layout_marginRight">@dimen/medium</item>
        <item name="android:layout_marginLeft">@dimen/medium</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="quizbtnstylemenu" parent="@style/quizbtnstyle">
        <item name="android:background">@drawable/quizbtnmenu</item>
        <item name="android:fontFamily">@font/bubblefontregular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/larger</item>
    </style>

    <style name="quizbtnstylemenuplayers" parent="@style/quizbtnstylemenu">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/colorTurquoise</item>
    </style>

</resources>
